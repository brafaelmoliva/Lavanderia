@model Lavanderia.Models.Cliente

@{
    ViewBag.Title = "Editar Cliente";
}

<h2>Editar Cliente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ClienteID)

    <div class="form-container">
        <div class="form-group">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Apellido)
            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DNI)
            @Html.TextBoxFor(m => m.DNI, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DNI, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Numero)
            @Html.TextBoxFor(m => m.Numero, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Numero, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado)
            @Html.CheckBoxFor(m => m.Estado)
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
    </div>
}

@section Styles {
    <style>
        .form-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 600px;
            margin: 0 auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
}
