@model Lavanderia.Models.Usuario

@{
    ViewBag.Title = "Nuevo Usuario";
}

<h2 style="text-align: center; margin-bottom: 30px;">Nuevo Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-container">

    <div class="form-group">
        @Html.LabelFor(m => m.CorreoElectronico)
        @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Clave)
        @Html.PasswordFor(m => m.Clave, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Clave, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Numero)
        @Html.TextBoxFor(m => m.Numero, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Numero, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EmpleadoID)
        @Html.DropDownListFor(m => m.EmpleadoID, (SelectList)ViewBag.Empleados, "Seleccione un empleado", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EmpleadoID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RolID)
        @Html.DropDownListFor(m => m.RolID, (SelectList)ViewBag.Roles, "Seleccione un rol", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RolID, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2 mt-3" })
</div>
}

@section Styles {
    <style>
        .form-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 600px;
            margin: 0 auto 40px auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
}
