@model IEnumerable<Lavanderia.Models.VistaDetalleBoleta>

@{
    ViewBag.Title = "Detalle de Boleta";
    int boletaId = Model.FirstOrDefault()?.BoletaID ?? 0;
}

<h2>Detalle de Boleta #@boletaId</h2>

<p>
    @Html.ActionLink("Volver al Listado", "Index", "Boleta", null, new { @class = "btn btn-secondary" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Prenda</th>
            <th>Tipo Cobro</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Prenda</td>
                <td>@item.TipoCobro</td>
                <td>@item.Cantidad</td>
                <td>@item.PrecioUnitario.ToString("C")</td>
                <td>@item.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <strong>Total: </strong> @Model.FirstOrDefault()?.Total.ToString("C")
    <br />
    <strong>IGV (18%): </strong> @Model.FirstOrDefault()?.IGV.ToString("C")
    <br />
    <strong>Total con IGV: </strong> @Model.FirstOrDefault()?.TotalConIGV.ToString("C")
</div>
