@model IEnumerable<Lavanderia.Models.VistaDetalleBoleta>

@section Styles {
    <style>
        body {
            background-color: white !important;
            padding: 40px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-left: 200px;
            padding-right: 10px;
        }

        h2 {
            text-align: center;
            color: #6f42c1;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        p {
            text-align: center;
            font-size: 1.1rem;
        }

        .table {
            background-color: #f3e5f5;
            border-radius: 8px;
            overflow: hidden;
            max-width: 1000px;
            margin: 2rem auto;
        }

            .table thead {
                background-color: #9b59b6;
                color: white;
            }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .btn-secondary {
            font-weight: 600;
            display: block;
            margin: 2rem auto;
        }
    </style>
}

<h2>Detalle de Boleta #@Model.First().BoletaID</h2>

<p><strong>Cliente:</strong> @Model.First().NombreCliente</p>
<p><strong>Empleado:</strong> @Model.First().AtendidoPor</p>
<p><strong>Sucursal:</strong> @Model.First().NombreLavanderia - @Model.First().DireccionLavanderia</p>
<p><strong>Distrito:</strong> @Model.First().Distrito</p>
<p><strong>RUC:</strong> @Model.First().RUC</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Prenda</th>
            <th>Tipo Cobro</th>
            <th>Peso</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Prenda</td>
                <td>@d.TipoCobro</td>
                <td>@d.Peso.ToString("F2")</td>
                <td>@d.Cantidad.ToString("F2")</td>
                <td>S/ @d.PrecioUnitario.ToString("F2")</td>
                <td>S/ @d.Subtotal.ToString("F2")</td>

            </tr>
        }
    </tbody>
</table>

<p><strong>Total:</strong> S/ @Model.First().Total.ToString("F2")</p>
<p><strong>IGV:</strong> S/ @Model.First().IGV.ToString("F2")</p>
<p><strong>Total con IGV:</strong> S/ @Model.First().TotalConIGV.ToString("F2")</p>


<a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
