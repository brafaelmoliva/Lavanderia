@model IEnumerable<Lavanderia.Models.BoletaResumen>

@{
    ViewBag.Title = "Boletas Registradas";
}

@section Styles {
    <style>
        body {
            background-color: white !important;
            padding: 40px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-left: 200px;
            padding-right: 10px;
        }

        h2 {
            text-align: center;
            color: #6f42c1;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .btn-success {
            font-weight: 600;
            display: block;
            margin: 0 auto 1.5rem auto;
        }

        .table {
            background-color: #f3e5f5;
            border-radius: 8px;
            overflow: hidden;
            max-width: 1000px;
            margin: 0 auto;
        }

            .table thead {
                background-color: #9b59b6;
                color: white;
            }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .btn-info {
            background-color: #5a68c7;
            border-color: #5a68c7;
            font-weight: 600;
        }
    </style>
}

<h2>Boletas Registradas</h2>

<p>
    @Html.ActionLink("Registrar Nueva Boleta", "Create", "Boleta", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Sucursal</th>
            <th>Fecha Emisión</th>
            <th>Fecha Entrega</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BoletaID</td>
                <td>@b.NombreCliente</td>
                <td>@b.NombreEmpleado</td>
                <td>@b.NombreSucursal</td>
                <td>@b.FechaEmision.ToShortDateString()</td>
                <td>@b.FechaEntrega.ToShortDateString()</td>
                <td>S/ @b.Total.ToString("F2")</td>
                <td>
                    @Html.ActionLink("Ver", "Detalle", new { id = b.BoletaID }, new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
