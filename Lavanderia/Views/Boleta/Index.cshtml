@model IEnumerable<Lavanderia.Models.Boleta>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Boletas";
}

@section Styles {
    <style>
        body {
            background-color: white !important;
            padding: 40px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-left: 200px;
            padding-right: 10px;
        }

        h2 {
            text-align: center;
            color: #6f42c1;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .form-inline {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 1.5rem;
        }

            .form-inline .form-control {
                margin-right: 10px;
            }

        .table {
            background-color: #f3e5f5;
            border-radius: 8px;
            overflow: hidden;
            max-width: 900px;
            margin: 0 auto;
        }

            .table thead {
                background-color: #9b59b6;
                color: white;
            }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .btn-primary {
            background-color: #7e57c2;
            border-color: #7e57c2;
            font-weight: 600;
        }

        .btn-secondary {
            font-weight: 600;
        }

        p {
            text-align: center;
            margin-top: 1.5rem;
        }
    </style>
}

<h2>Boletas</h2>

<form method="get" class="form-inline mb-3">
    <input type="text" name="filtro" class="form-control mr-2" placeholder="Buscar por Cliente o Empleado" value="@Request.QueryString["filtro"]" />
    <button type="submit" class="btn btn-primary">Buscar</button>
    <a href="@Url.Action("Index", "Boleta")" class="btn btn-secondary ml-2">Limpiar</a>
</form>

<p>
    @Html.ActionLink("Registrar Nueva Boleta", "Create", "Boleta", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>BoletaID</th>
            <th>ClienteID</th>
            <th>EmpleadoID</th>
            <th>SucursalID</th>
            <th>Fecha Emisión</th>
            <th>Fecha Entrega</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var boleta in Model)
        {
            <tr>
                <td>@boleta.BoletaID</td>
                <td>@boleta.ClienteID</td>
                <td>@boleta.EmpleadoID</td>
                <td>@boleta.SucursalID</td>
                <td>@boleta.FechaEmision.ToString("yyyy-MM-dd")</td>
                <td>@boleta.FechaEntrega.ToString("yyyy-MM-dd")</td>
                <td>@boleta.Total.ToString("C")</td>
                <td>
                    @Html.ActionLink("Ver Detalle", "Detalle", "Boleta", new { id = boleta.BoletaID }, new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
