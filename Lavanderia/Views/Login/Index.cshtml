@{

    Layout = null;

    ViewBag.Title = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
        body, html {
            height: 100%;
            margin: 0;
            background: linear-gradient(135deg, #9b59b6, #8e44ad); /* morado lavanda */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden; /* Evita scroll por la animación */
        }

        .login-container {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background: white;
            padding: 2.5rem 3rem;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;

            /* Animación */
            opacity: 0;
            transform: translateY(50px);
            animation: slideUpFade 0.6s forwards;
        }

    @@keyframes slideUpFade {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h2 {
            color: #6f42c1; /* un morado más oscuro para el texto */
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .btn-primary {
            background-color: #7e57c2;
            border-color: #7e57c2;
            font-weight: 600;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #5e35b1;
            border-color: #5e35b1;
        }

        label {
            font-weight: 600;
            color: #4a148c;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #842029;
            border-radius: 6px;
            padding: 0.75rem 1rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }
</style>

<div class="login-container">
    <div class="login-box">
        <h2>Iniciar sesión</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="correo" class="form-label">Correo electrónico</label>
                <input type="email" name="correo" id="correo" class="form-control" placeholder="Correo electrónico" required autofocus />
            </div>
            <div class="mb-4">
                <label for="clave" class="form-label">Contraseña</label>
                <input type="password" name="clave" id="clave" class="form-control" placeholder="Contraseña" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        }
    </div>
</div>
