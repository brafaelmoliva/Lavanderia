@model Lavanderia.Models.Empleado

@{
    ViewBag.Title = "Editar Empleado";
}

<style>
    .edit-container {
        max-width: 600px;
        margin: 40px auto;
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    h2 {
        text-align: center;
        color: #6f42c1;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 600;
        color: #4a148c;
    }

    .btn-primary {
        background-color: #7e57c2;
        border-color: #7e57c2;
        font-weight: 600;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #5e35b1;
            border-color: #5e35b1;
        }
</style>

<div class="edit-container">
    <h2>Editar Empleado</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.EmpleadoID)

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.SucursalID)
            @Html.DropDownListFor(m => m.SucursalID, (SelectList)ViewBag.Sucursales, "Seleccione una sucursal", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SucursalID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Apellido)
            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.DNI)
            @Html.TextBoxFor(m => m.DNI, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DNI, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Numero)
            @Html.TextBoxFor(m => m.Numero, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Numero, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.HoraEntrada)
            @Html.TextBoxFor(m => m.HoraEntrada, "{0:hh\\:mm}", new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(m => m.HoraEntrada, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.HoraSalida)
            @Html.TextBoxFor(m => m.HoraSalida, "{0:hh\\:mm}", new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(m => m.HoraSalida, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-4">
            @Html.CheckBoxFor(m => m.Estado, new { @class = "form-check-input", id = "Estado" })
            <label class="form-check-label" for="Estado">Activo</label>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
