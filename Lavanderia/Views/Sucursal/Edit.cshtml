@model Lavanderia.Models.Sucursal

@{
    ViewBag.Title = "Editar Sucursal";
}

<style>
    .edit-container {
        max-width: 600px;
        margin: 40px auto;
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }

    h2 {
        text-align: center;
        color: #6f42c1;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    label {
        font-weight: 600;
        color: #4a148c;
    }

    .btn-primary {
        background-color: #7e57c2;
        border-color: #7e57c2;
        font-weight: 600;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #5e35b1;
            border-color: #5e35b1;
        }
</style>

<div class="edit-container">
    <h2>Editar Sucursal</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.SucursalID)

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.DistritoID)
            @Html.TextBoxFor(m => m.DistritoID, new { @class = "form-control", placeholder = "DistritoID" })
            @Html.ValidationMessageFor(m => m.DistritoID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.Direccion)
            @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control", placeholder = "Dirección" })
            @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
        </div>

        <div class="form-check mb-4">
            @Html.CheckBoxFor(m => m.Estado, new { @class = "form-check-input", id = "Estado" })
            <label class="form-check-label" for="Estado">Activo</label>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
